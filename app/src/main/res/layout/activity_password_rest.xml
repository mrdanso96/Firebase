<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FF767676"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".password_rest">

    <TextView
            android:text="Reset your Password if you forget your old password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
            android:textSize="24sp" android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/user_email_reset" android:layout_centerInParent="true" android:background="#fff"
            android:padding="5pt" android:hint="your email address"/>
    <Button
            android:text="Reset"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/reset_btn" android:layout_below="@+id/user_email_reset"
            android:layout_centerHorizontal="true" android:layout_marginTop="40dp"
            android:background="@android:color/holo_green_dark"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:weightSum="2">
        <Button
                android:text="login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="1"
                android:background="@color/colorPrimaryDark"/>
        <Button
                android:text="register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"
                android:background="#cc2323"/>
    </LinearLayout>
</RelativeLayout>