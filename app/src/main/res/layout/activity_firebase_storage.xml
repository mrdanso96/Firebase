<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".firebase_storage">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView"
            android:scaleType="centerCrop" android:layout_centerInParent="true"/>
    <Button
            android:text="upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/upload_image_btn"
            android:layout_alignParentBottom="true" android:background="@android:color/holo_red_dark"
            android:textColor="#fff" android:textSize="18sp"/>
</RelativeLayout>