<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile_activity" android:background="#444">

    <TextView
            android:text="Fill out your Profile Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="24sp"
            android:textAlignment="center" android:layout_margin="20dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerInParent="true">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_first_name" android:background="#fff" android:layout_margin="10dp"
                android:padding="10dp" android:hint="First Name"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_last_name" android:background="#fff" android:layout_margin="10dp"
                android:padding="10dp" android:hint="Last Name"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/user_username" android:background="#fff" android:layout_margin="10dp"
                android:padding="10dp" android:hint="user@Name"/>
        <Button
                android:text="Update "
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/userinfo_update_btn"
                android:background="@color/colorPrimary" android:layout_gravity="center_horizontal"
                android:textColor="#fff" android:layout_marginTop="15dp"/>
    </LinearLayout>
</RelativeLayout>